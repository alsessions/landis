	</head>

	<body class="ltr">
		{% include '_partials/_header.twig' %}

		



		<section class="px-4 mx-auto mt-10 max-w-7xl">
			<h1 class="mb-12">Upcoming Events @ Landis</h1>
			<div class="grid grid-cols-1 md:grid-cols-2 md:gap-4">
			{% paginate craft.entries.section('events').date('>= '~ now|atom)
		.orderBy('date asc').limit(10) as pageInfo, pageEntries %}
{% for entry in pageEntries %}
					<div class="flex flex-wrap md:mb-8 bg-white rounded-lg shadow-sm hover:shadow transition-shadow duration-300">
						<div class="w-3/12 flex flex-col items-center pt-4">
							{% if entry.featuredImage | length %}
							{% for myAsset in entry.featuredImage.all() %}
								<a href="{{ entry.url }}" class="flex flex-col">
									<img src="{{ myAsset.url('square500') }}" class="w-32 mx-auto bg-gray-100 rounded-lg shadow-sm md:w-52 hover:opacity-90 transition-opacity duration-300">
								</a>
							{% endfor %}
							{% else %}
							<a href="{{ entry.url }}" class="flex flex-col">
								<img src="/assets/images/_640x640_crop_center-center_82_line/calendar.jpg.webp" class="w-32 mx-auto bg-gray-100 rounded-lg shadow-sm md:w-52 hover:opacity-90 transition-opacity duration-300">
							</a>
							{% endif %}
						</div>

						<div class="w-9/12 pl-4 md:pl-6 py-4">
							<h4 class="text-lg font-medium leading-tight md:text-xl mb-3">
								<a href="{{ entry.url }}" class="text-blue-500 hover:text-blue-800 transition-colors duration-300 inline-block">{{ entry.title }}</a>
							</h4>

							{% if entry.date %}
								<div class="flex items-center my-2">
									<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-500 mr-2" viewbox="0 0 20 20" fill="currentColor">
										<path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
									</svg>
									<span class="text-sm text-gray-600">{{ entry.date | date('M j, Y') }}</span>
								</div>
								<div class="flex items-center my-2">
									<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-500 mr-2" viewbox="0 0 20 20" fill="currentColor">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
									</svg>
									<span class="text-sm text-gray-600">{{ entry.date | date('g:i A') }}</span>
								</div>
							{% endif %}

							{% if entry.location %}
								<div class="flex items-center my-2">
									<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-500 mr-2" viewbox="0 0 20 20" fill="currentColor">
										<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
									</svg>
									<span class="text-sm text-gray-600">{{ entry.location }}</span>
								</div>
							{% endif %}
							
							<div class="flex items-center my-2">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-500 mr-2" viewbox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
								</svg>
								<a href="{{ entry.url }}" class="text-sm text-blue-500 hover:text-blue-800 transition-colors duration-300">Details and Registration</a>
							</div>
<!--
					
-->
						</div>

					</div>
				
				{% endfor %}
				
			</div>
			<div class="flex justify-between max-w-7xl mx-auto my-8">
				<div>{% if pageInfo.prevUrl %}<a href="{{ pageInfo.prevUrl }}" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-blue-700 transition-colors duration-300"><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>Previous Events</a>{% endif %}</div>
				<div>{% if pageInfo.nextUrl %}<a href="{{ pageInfo.nextUrl }}" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-blue-700 transition-colors duration-300">More Events<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /></svg></a>{% endif %}</div>
				</div>
		</section>
