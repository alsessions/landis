{% include '_partials/_head.twig' %}

<body class="ltr">
    {% include '_partials/_header.twig' %}
    {% if entry.featuredImage | length %}
    {% set optimizedImages = entry.featuredImage.one().optimizedHero %}
    <div
        style="background-image:url('{{ optimizedImages.src() }}');background-position: center center;background-size: cover; background-repeat: no-repeat; width:100%;height:100%; ">
        {% else %}
        <div
            style="background-image:url('/assets/images/IMG_0432.JPG'); background-position: center center; background-size: cover; background-repeat: no-repeat; width:100%;height:100%; ">
            {% endif %}
            <div class="px-4 py-24 bg-black bg-opacity-50 md:py-48"
                style="background:rgba(0,0,0,0.4);">
                <h1
                    class="mx-auto text-3xl font-semibold text-center text-white md:text-4xl lg:text-5xl md:max-w-5xl">
                    {{ entry.title | widont }}
                </h1>
                <h2 class="text-2xl md:text-3xl mx-auto text-white text-center">Part of the Native Plant Trail</h2>
            </div>
        </div>
        <section class="px-4 mx-auto mt-10 max-w-7xl">
            <div class="flex justify-between px-1 md:px-4">
            {# Set parameters for prev/next elements list #}
           
        {% set params = craft.entries.section('nativePlantsTour')%}
        
        {# Get the prev/next elements #}
        {% set prevEntry = entry.getPrev(params) %}
        {% set nextEntry = entry.getNext(params) %}
        
        {# And make sure to only output the links if the element exists #}
        {% if prevEntry %}<a href="{{ prevEntry.url }}" class="text-blue-600">&larr; <span class=" hidden md:inline-block">{{ prevEntry.title }}</span></a>{%  else %} &nbsp; &nbsp;{% endif %}
        
        <a href="/audio/#native-start" class="text-blue-600">Start</a>
        
        {% if nextEntry %}<a href="{{ nextEntry.url }}" class="text-blue-600"><span class="hidden md:inline-block">{{ nextEntry.title }}</span> &rarr;</a>{%  else %} &nbsp; &nbsp;{% endif %}
        </div>
        </section>
        <div class="min-h-screen gap-6 px-4 mx-auto mt-4 mb-2 lg:grid max-w-6xl lg:grid-cols-12">
           
                    <div class="col-span-4 md:mt-10 mx-auto">
                    
                        {% set myAsset = entry.audio.one() %}
                        {% if myAsset %}
                        <audio controls src="{{ myAsset.url }}" type="audio/mp3" class="w-full rounded-lg lg:mt-10">
                            Your browser does not support the
                            <code>audio</code> element.
                        </audio>
                        {% endif %}
                       <span class="pb-1 text-sm italic text-gray-600">{{ entry.textMarkdown }}</span>

                      
                    </div>
             
                <div class="col-span-8 mt-6 lg:mt-10">
                    <h2 class="text-3xl">{{ entry.title }}</h2>
                   {{ entry.transcript | markdown }}
                </div>
            </div>
        
            {# PurgeCSS: text-base #}
            {% include '_partials/_footer.twig' %}
</body>

</html>