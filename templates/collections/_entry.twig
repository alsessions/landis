				{% for myAsset in entry.pageImages.all() %}
					<a href="{{ myAsset.url }}"><img src="{{ myAsset.url('square500') }}"   class="rounded shadow-2xl mx-auto"></a>
				{% endfor %}
			</div>
			   
</section>
{% endif %}
    <section class="mb-10 mt-20  max-w-6xl mx-auto clear-both">
    <div class="md:flex  md:justify-between">
    {# Set parameters for prev/next elements list #}
{% set params = craft.entries.section('collections').orderBy('title asc') %}

{# Get the prev/next elements #}
{% set prevEntry = entry.getPrev(params) %}
{% set nextEntry = entry.getNext(params) %}

{# And make sure to only output the links if the element exists #}
{% if prevEntry %}<a href="{{ prevEntry.url }}" class="px-2 py-1 text-center bg-green-800 rounded-md block my-4 text-white w-2/3 mx-auto md:mx-4 md:w-auto">&larr; {{ prevEntry.title }}</a>{% endif %}

<a href="/collections" class="px-2 py-1 text-center bg-green-800 rounded-md block my-4 text-white w-2/3 mx-auto md:mx-4 md:w-auto">All Collections</a>

{% if nextEntry %}<a href="{{ nextEntry.url }}" class="px-2 py-1 text-center bg-green-800 rounded-md block my-4 text-white w-2/3 mx-auto md:mx-4 md:w-auto">{{ nextEntry.title }} &rarr;</a>{% endif %}
</div>
</section>
{# PurgeCSS: text-base #}

	{% include '_partials/_footer.twig' %}
