<body class="ltr">
	{% include '_partials/_header.twig' %}
	
	<section class=" max-w-none px-4 pt-10 md:mt-20 mx-auto">
		<article class="w-full md:max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12">
<div>


