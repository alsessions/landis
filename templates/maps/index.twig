{% include '_partials/_head.twig' %}

<body class="ltr">
	{% include '_partials/_header.twig' %}

	{% if entry.featuredImage | length %}

		{% set optimizedImages = entry.featuredImage.one().optimizedHero %}
		<div
			style="
				        background-image:url('{{ optimizedImages.src() }}');
				        background-position: center center;
				        background-size: cover;
				        background-repeat: no-repeat;
				        width:100%;
				        height:100%;
				        ">

		{% endif %}
		<div class="px-4 pt-24 bg-black bg-opacity-60  md:py-48" style="background:rgba(0,0,0,0.3);">
            <h1 class="mx-auto text-3xl font-semibold text-center text-white  md:text-4xl lg:text-5xl md:max-w-5xl mb-2">
                {{ entry.title | widont }}
            </h1>
            <p class="mt-0 text-xl font-semibold text-center text-white md:text-2xl">
                {{ entry.subtitle }}
            </p>
        </div>
    </div>




	<section class="max-w-4xl min-h-screen px-4 py-10 mx-auto lg:max-w-5xl">

		<article class="mx-auto">

	<h1 class="mb-12">Maps and Guides</h1>

			        <h2 class="mb-10 text-gray-700 text-xl md:text-xl mx-auto">{{ entry.textMarkdown }}</h2>

		</article>


		<section class="px-4 mx-auto mt-10 max-w-7xl">

			<div class="grid grid-cols-1 md:grid-cols-2 md:gap-y-20 md:gap-x-6">

				{% set myEntryQuery = craft.entries()
					.section('mapItem')
					.all() %}

				{% for entry in myEntryQuery %}

					<div class="flex flex-wrap md:mb-8 bg-white rounded-lg shadow-sm hover:shadow transition-shadow duration-300">
						<div class="w-3/12 flex flex-col items-center pt-4">
							{% if entry.featuredImage | length %}
							{% for myAsset in entry.featuredImage.all() %}
								<a href="{{ entry.url }}" class="flex flex-col">
									<img src="{{ myAsset.url('square500') }}" class="w-32 mx-auto bg-gray-100 rounded-lg shadow-sm md:w-52 hover:opacity-90 transition-opacity duration-300">
								</a>
							{% endfor %}

							{% endif %}
						</div>

						<div class="w-9/12 pl-4 md:pl-6 py-4">
							<h4 class="text-xl font-semibold leading-tight md:text-2xl mb-3">
								<a href="{{ entry.url}}" class="text-blue-500 hover:text-blue-800 transition-colors duration-300 inline-block">{{ entry.title }}</a>
							</h4>
							<p class="text-base md:text-lg leading-relaxed mb-3">
								{{ entry.textMarkdown  }}
							</p>
							<div class="flex items-center my-2">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
								</svg>
								<a href="{{ entry.resourceLink }}" class="text-base font-medium text-green-600 hover:text-green-800 transition-colors duration-300">View/Download</a>
							</div>
						</div>

					</div>

			{% endfor %}

			</div>

		</section>

	</section>



	{% include '_partials/_footer.twig' %}
    				<script src="/js/lightgallery/lightgallery.min.js"></script>
                				<script src="/js/lightgallery/plugins/zoom/lg-zoom.umd.js"></script>

									<script src="/js/lightgallery/plugins/fullscreen/lg-fullscreen.umd.js"></script>
									<script src="/js/lightgallery/plugins/thumbnail/lg-thumbnail.umd.js"></script>

        			<script type="text/javascript">
			lightGallery(document.getElementById("lightgallery"), {
  speed: 500,
  plugins: [lgZoom,lgFullscreen],
  showZoomInOutIcons: true,
  actualSize: true,
  zoom: true,
  thumbMargin: 20,
  thumbHeight: 120,
  thumbWidth: 120,
  download: true,
  actualSizeIcons: { zoomIn: 'lg-actual-size', zoomOut: 'lg-zoom-out' }
});



			</script>
</body>
</html>
