{% include '_partials/_head.twig' %}

<body class="ltr">
    {% include '_partials/_header.twig' %}

    <section class="max-w-none px-4 pt-10 md:mt-20 mx-auto">
        <article class="w-full md:max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12">
            <div>
                {% for myAsset in entry.featuredImage.all() %}
                    {% set optimizedImages = entry.featuredImage.one().collectionImages %}
                    <picture>
                        <source srcset="{{ optimizedImages.srcsetWebP() }}" sizes="100vw" type="image/webp" />
                        <img src="{{ optimizedImages.src() }}" srcset="{{ optimizedImages.srcset() }}" sizes="100vw" />
                    </picture>
                {% endfor %}
            </div>
            <div>
                <h4 class="text-gray-500 -mt-2 text-lg md:text-xl uppercase">Maps & Guides</h4>
                <h1 class="mt-1 text-2xl md:text-3xl">{{ entry.title }}</h1>
                {{ entry.textMarkdown | typogrify }}
            </div>
        </article>
    </section>


    <section class="mb-10 mt-20 max-w-6xl mx-auto clear-both">
        <div class="md:flex md:justify-between">
            {# Set parameters for prev/next elements list #}
            {% set params = craft.entries.section('maps').orderBy('title asc') %}
            {# Get the prev/next elements #}
            {% set prevEntry = entry.getPrev(params) %}
            {% set nextEntry = entry.getNext(params) %}
            {# And make sure to only output the links if the element exists #}
            {% if prevEntry %}
                <a href="{{ prevEntry.url }}" class="inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-green-700 transition-colors duration-300"><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>{{ prevEntry.title }}</a>
            {% endif %}
            <a href="/maps" class="inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-green-700 transition-colors duration-300">All Maps & Guides</a>
            {% if nextEntry %}
                <a href="{{ nextEntry.url }}" class="inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-green-700 transition-colors duration-300">{{ nextEntry.title }}<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /></svg></a>
            {% endif %}
        </div>
    </section>


    {% include '_partials/_footer.twig' %}
    <script src="/js/lightgallery/lightgallery.min.js"></script>
    <script src="/js/lightgallery/plugins/zoom/lg-zoom.umd.js"></script>
    <script src="/js/lightgallery/plugins/fullscreen/lg-fullscreen.umd.js"></script>
    <script src="/js/lightgallery/plugins/thumbnail/lg-thumbnail.umd.js"></script>
    <script type="text/javascript">
        lightGallery(document.getElementById("lightgallery"), {
            speed: 500,
            plugins: [lgZoom, lgFullscreen],
            showZoomInOutIcons: true,
            actualSize: true,
            zoom: true,
            thumbMargin: 20,
            thumbHeight: 120,
            thumbWidth: 120,
            download: true,
            actualSizeIcons: { zoomIn: 'lg-actual-size', zoomOut: 'lg-zoom-out' }
        });
    </script>
</body>
</html>
