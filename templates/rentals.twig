{% include '_partials/_head.twig' %}

<body class="ltr">
    {% include '_partials/_header.twig' %}
    
    {% if entry.featuredImage | length %}
        {% set optimizedImages = entry.featuredImage.one().optimizedImages %}
        <div style="background-image: url('{{ optimizedImages.src() }}');
                  background-position: center center;
                  background-size: cover;
                  background-repeat: no-repeat;
                  width: 100%;
                  height: 100%;">
    {% endif %}
    
            <div class="px-4 py-24 bg-black bg-opacity-20 md:py-48" style="background: rgba(0,0,0,0.1);">
                <h1 class="mx-auto text-3xl font-semibold text-center text-white md:text-4xl lg:text-5xl md:max-w-5xl">
                    {{ entry.title | widont }}
                </h1>
                <p class="mt-0 text-xl font-semibold text-center text-white md:text-2xl">
                    {{ entry.subtitle }}
                </p>
            </div>
        </div>
    
    <main class="mx-auto">
        <section class="max-w-5xl pt-10 pb-4 mx-auto text-lg md:text-2xl italic px-4 text-center text-gray-800">
            {{ entry.textMarkdown }}
        </section>
        
        {% for block in entry.pageBuilder.all() %}
            {% switch block.type %}
                {% case "twoColumns" %}
                    <section class="grid grid-cols-1 gap-10 px-4 py-4 mx-auto prose prose-lg md:grid-cols-2 max-w-7xl prose-a:text-white prose-a:no-underline">
                        <div>
                            {{ block.leftColumn }} {# Type: Redactor #}
                            <a href="/gallery/weddings-rentals" class="inline-block px-4 py-2 mx-auto text-center text-white transition-colors duration-200 transform rounded-lg bg-green-600 hover:bg-green-700 focus:outline-none focus:ring focus:ring-green-300 focus:ring-opacity-50 font-medium">
                                Photo Gallery
                            </a>
                        </div>
                        <div>
                            {{ block.rightColumn }} {# Type: Redactor #}
                        </div>
                    </section>
                    
                {% case "fullWidthCta" %}
                    {% if block.backgroundImage | length %}
                        {% set optimizedImages = block.backgroundImage.one().optimizedImages %}
                    {% endif %}
                    <section class="w-full px-4 py-10 mb-20 bg-fixed sm:py-20 md:py-32" 
                        style="background-image: url('{{ optimizedImages.src() }}'); 
                               background-position: center center;
                               background-size: cover;
                               background-repeat: no-repeat;
                               width: 100%;
                               height: 100%;">
                        <div class="px-8 py-6 not-prose w-full md:w-3/4 lg:w-3/5 xl:w-1/2 mx-auto bg-black border border-gray-200 rounded-lg bg-opacity-50 shadow-lg backdrop-blur-sm">
                            <h2 class="mx-auto mt-0 mb-3 text-xl font-bold text-center text-white md:text-2xl">
                                {{ block.heading }}
                            </h2>
                            <div class="w-20 h-1 mx-auto mb-4 bg-green-500 rounded"></div> 
                            <p class="text-lg text-center text-white mb-6">
                                {{ block.body | widont }}
                            </p> {# Type: Plain Text #}
                            <div class="text-center">
                                <a href="{{ block.CTAlink }}" class="inline-block px-4 py-2 mx-auto text-center text-white transition-colors duration-200 transform rounded-lg bg-green-600 hover:bg-green-700 focus:outline-none focus:ring focus:ring-green-300 focus:ring-opacity-50 font-medium">
                                    Check Availability
                                </a>
                            </div>
                        </div>
                    </section>
                    
                {% case "text" %}
                    <section class="px-4 pb-10 mx-auto prose prose-lg max-w-7xl">
                        {{ block.text }}
                    </section>
                    
                {% default %}
                    {# Default case handling #}
                    ...
            {% endswitch %}
        {% endfor %}
    </main>
    
    {% include '_partials/_footer.twig' %}
</body>
</html>