{% include '_partials/_head.twig' %}

<body class="ltr">
    {% include '_partials/_header.twig' %}
    
    {# Fetch the entries #}
    
    <section class="max-w-7xl px-4 mx-auto mt-10 min-h-screen">
        <h1 class="mb-12">{{ entry.title }}</h1>
        <h2 class="mb-10 text-gray-700 text-xl md:text-xl mx-auto">{{ entry.textMarkdown }}</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 mx-auto md:gap-4 my-10">
            {% for entry in craft.entries.section('resources').limit(12).all() %}
            <div class="flex flex-col md:flex-row mb-6 w-full items-start">
                <div class="flex-none md:w-12 mr-2 mt-1">
                    {% set myAsset = entry.newsletterPDF.one() %}
                    {% if myAsset %}
                        <a href="{{ myAsset.url }}" class="inline-block" target="_new">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-blue-300 hover:text-blue-400" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M6 2c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6H6zm7 7V3.5L18.5 9H13z"/>
                                <path d="M12 17l-4-4h2.55v-3h2.9v3H16z" fill="#2563EB" />
                            </svg>
                        </a>
                    {% endif %}
                </div>
                <div class="flex-grow pl-1 prose prose-p:mt-0 prose-p:mb-2 prose-headings:font-medium">
                    <h2 class="mb-0">{{ entry.title }}</h2>
                    {{ entry.textMarkdown }}
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
    {% include '_partials/_footer' %}
</body>
</html>
